<%- include('includes/header') %>
<div class="main-content">
  <div class="container-fluid">
    <div class="row" style="margin-top:100px;">
      <div class="col-lg-4 col-md-3 col-sm-12"></div>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card">
          <div class="card-header card-header-primary">
            <h3 class="card-title text-center"><%= server.name %></h3>
            <h5 class="text-center category"><%= server.description %></h5>
          </div>
          <div class="card-body">
            <form method="post" action="/login">
              <div class="form-group">
                <label for="user">Email/Username</label>
                <input type="text" class="form-control" name="user" placeholder="Email/Username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-primary pull-right">Login</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-3 col-sm-12"></div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
